@inherits LayoutComponentBase



<div class="d-flex vh-100 overflow-hidden">
    
    <div class="sidebar-wrapper d-none d-md-flex flex-column bg-dark text-white shadow" style="width: 260px; min-width: 260px;">
        <NavMenu /> 
    </div>

    <div class="d-flex flex-column flex-grow-1 overflow-hidden bg-light">
        
        <header class="navbar navbar-expand bg-white shadow-sm border-bottom px-4 py-3 justify-content-between align-items-center" style="height: 70px;">
            
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-outline-secondary d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                    <i class="bi bi-list fs-4"></i>
                </button>
                
                <h5 class="mb-0 text-muted d-none d-md-block">Yönetim Paneli</h5>
            </div>

            <div class="d-flex align-items-center gap-3">
                
                <div class="input-group d-none d-lg-flex" style="width: 250px;">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-search small"></i></span>
                    <input type="text" class="form-control bg-light border-start-0 form-control-sm" placeholder="Hızlı ara...">
                </div>

                <button class="btn btn-light position-relative rounded-circle p-2">
                    <i class="bi bi-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge border border-light rounded-circle bg-danger p-1">
                        <span class="visually-hidden">Bildirim</span>
                    </span>
                </button>

                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                        <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle me-2">
                        <span class="fw-bold small d-none d-sm-inline">Admin</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small shadow">
                        <li><a class="dropdown-item" href="#">Profil</a></li>
                        <li><a class="dropdown-item" href="#">Ayarlar</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#">Çıkış</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <main class="flex-grow-1 overflow-auto p-4">
            @Body
        </main>

    </div>
</div>

<div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="mobileMenu">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menü</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0">
        <NavMenu />
    </div>
</div>

<div id="blazor-error-ui">
    Hata oluştu.
    <a href="" class="reload">Yenile</a>
    <a class="dismiss">🗙</a>
</div>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
